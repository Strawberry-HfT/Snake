<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hft.stuttgart.strawberry.snake" >

    <!-- Berechtigung fÃ¼r  Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_berry"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Activities -->
        <activity
            android:name="de.hft.stuttgart.strawberry.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.hft.stuttgart.strawberry.activities.GPSingleActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.hft.stuttgart.strawberry.activities.BluetoothSearchActivity"
            android:label="@string/app_name" >
        </activity>
        <!--
        <activity
            android:name="de.hft.stuttgart.strawberry.activities.GPMultiActivity"
            android:label="@string/app_name" >
        </activity>
        -->
        <activity
            android:name="de.hft.stuttgart.strawberry.activities.LobbyActivity"
            android:label="@string/app_name" >
        </activity>


        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true"
            android:xlargeScreens="true" />
    </application>

</manifest>
